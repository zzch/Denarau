<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天：23℃"
            android:id="@+id/membershipCardMainWeather"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:background="#c9c9c9"
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:id="@+id/imageView23"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:background="@mipmap/shouye_laba_icon"
            android:layout_gravity="center_vertical"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/imageView3"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/membershipCardNoticeInfo"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:singleLine="true"
            android:layout_toEndOf="@+id/membershipCardMainWeather"
            android:layout_weight="100"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:background="@mipmap/shouye_arrow_icon"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:id="@+id/moreInfoImageButton"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:background="#e2e2e2"
        android:id="@+id/membershipCardViewPagerRl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_weight="5"
        android:padding="5dp">
    <android.support.v4.view.ViewPager
        android:id="@+id/membershipCardViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:persistentDrawingCache="animation"
        android:layout_alignParentBottom="true"
        android:layout_weight="12"
        >
    </android.support.v4.view.ViewPager>

        <LinearLayout
            android:background="#e2e2e2"
            android:id="@+id/indicatorLinearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/membershipCardViewPager"
            android:weightSum="1"
            android:gravity="center"
            android:layout_weight="1"
            >
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/imageView29"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_weight="2"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnOrderPositon">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/shouye_yuyue_icon"
                android:id="@+id/view"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打位预约"
                android:id="@+id/textView3"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/view"
                />
        </RelativeLayout>

        <ImageView
            android:background="#e2e2e2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:id="@+id/imageView25"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnCoachTurorial">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/shouye_jiaolian_icon"
                android:id="@+id/view2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教练教学"
                android:id="@+id/textView4"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/view2"
                />

        </RelativeLayout>

        <ImageView
            android:background="#e2e2e2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:id="@+id/imageView26"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnMemberStore">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/shouye_shangcheng_icon"
                android:id="@+id/view3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员商城"
                android:id="@+id/textView5"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/view3"
                />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/imageView24"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:id="@+id/linearLayout3"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnCostHistory"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/shouye_xiaofei_icon"
                android:id="@+id/view4"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费记录"
                android:id="@+id/textView6"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/view4"
                />

            <ImageView
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>

        <ImageView
            android:background="#e2e2e2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:id="@+id/imageView27"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnFoodService">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/shouye_canyin_icon"
                android:id="@+id/view5"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐饮服务"
                android:id="@+id/textView7"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/view5"
                />
            <ImageView
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>

        <ImageView
            android:background="#e2e2e2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:id="@+id/imageView28"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnGiveAdvice">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/shouye_yijian_icon"
                android:id="@+id/view6"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:id="@+id/textView8"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/view6"
                />
            <ImageView
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
