<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_cda2"
    tools:context="com.zhongchuangtiyu.denarau.Activities.CDA2Activity">
    <RelativeLayout
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relativeLayout15"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2015.12.28"
            android:id="@+id/courseDate"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15:00-16:00"
            android:id="@+id/courseTime"
            android:layout_alignBottom="@+id/courseState"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:background="@mipmap/wodekecheng_zt_bj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="待评价"
            android:textColor="#ffffff"
            android:id="@+id/courseState"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/relativeLayout15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/relativeLayout16">

        <ImageView
            android:background="#ff0000"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/courseCoachImg"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="刘懒"
            android:id="@+id/courseCoachName"
            android:layout_alignTop="@+id/courseCoachImg"
            android:layout_toEndOf="@+id/courseCoachImg"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="主教练"
            android:id="@+id/courseCoachType"
            android:layout_alignBottom="@+id/courseCoachImg"
            android:layout_alignStart="@+id/courseCoachName"/>
    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/webView2"
        android:layout_below="@+id/relativeLayout16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"/>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/webView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/relativeLayout17">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请您对本次课程进行评价"
            android:id="@+id/textView27"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <!--<com.hedgehog.ratingbar.RatingBar-->
        <!--android:layout_gravity="center"-->
        <!--android:id="@+id/cda2RatingBar"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--hedgehog:starCount="5"-->
        <!--hedgehog:clickable="true"-->
        <!--hedgehog:starEmpty="@mipmap/xx_mr"-->
        <!--hedgehog:starFill="@mipmap/xx_xz"-->
        <!--hedgehog:starImageSize="50dp"-->
        <!--android:layout_below="@+id/textView27"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="15dp"></com.hedgehog.ratingbar.RatingBar>-->
    </RelativeLayout>

    <Button
        android:background="@mipmap/pingjia_anniu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评价"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:id="@+id/btnRating"
        android:layout_below="@+id/relativeLayout17"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"/>
</RelativeLayout>
