<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_coaches_detail"
    tools:context="com.zhongchuangtiyu.denarau.Activities.CoachesDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/coachDetailImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/coachDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/coachDetailImage"
                    android:layout_alignTop="@id/coachDetailImage"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/coachDetailType"
                    android:layout_toRightOf="@+id/coachDetailImage"
                    android:layout_alignTop="@id/coachDetailImage"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/coachDetailName"
                    android:layout_marginTop="40dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/coachDetailIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <com.zhongchuangtiyu.denarau.Utils.CustomListView
                    android:id="@+id/coachDetailListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.zhongchuangtiyu.denarau.Utils.CustomListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
