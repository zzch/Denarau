<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/listCoachImage"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/listCoachName"
        android:layout_alignTop="@+id/listCoachImage"
        android:layout_toEndOf="@+id/listCoachImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/listCoachType"
        android:layout_below="@+id/listCoachName"
        android:layout_toEndOf="@+id/listCoachImage"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="#ff0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/listCoachPrice"
        android:layout_marginRight="5dp"
        android:text="1000"
        android:layout_alignTop="@+id/listCoachType"
        android:layout_alignEnd="@+id/textView22"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="课程起售价："
        android:id="@+id/textView22"
        android:layout_alignBottom="@+id/listCoachName"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
