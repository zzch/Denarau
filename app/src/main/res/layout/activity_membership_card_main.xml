<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MembershipCardMain">

    <RelativeLayout
        android:id="@+id/MembershipCardViewPagerRl"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    </RelativeLayout>
    <ImageView
        android:id="@+id/ViewPagerDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a29d9d"
        android:layout_below="@+id/MembershipCardViewPagerRl"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ViewPagerDivider"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:id="@+id/MembershipCardNoticeInfo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/TrumpetImageView"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/MembershipCardNoticeInfo"
            android:layout_margin="2dp"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/MoreInfoImageButton"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/MembershipCardNoticeInfo"
            android:layout_margin="2dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="打位预约"
            android:id="@+id/btnOrderPositon"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="教练教学"
            android:id="@+id/btnCoachTurorial"
            android:layout_alignBottom="@+id/btnOrderPositon"
            android:layout_toEndOf="@+id/btnOrderPositon"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="会员商城"
            android:id="@+id/btnMeberStore"
            android:layout_alignBottom="@+id/btnCoachTurorial"
            android:layout_toEndOf="@+id/btnCoachTurorial"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="消费记录"
            android:id="@+id/btnCostHistory"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="餐饮服务"
            android:id="@+id/btnFoodService"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="意见反馈"
            android:id="@+id/btnGiveAdvice"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
