<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/memberStoreBrassieImage"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/memberStoreBreassieName"
        android:layout_alignTop="@+id/memberStoreBrassieImage"
        android:layout_toEndOf="@+id/memberStoreBrassieImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/memberStoreBreassiePrice"
        android:layout_alignBottom="@+id/memberStoreBreassieName"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:layout_alignBottom="@+id/memberStoreBrassieImage"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:id="@+id/btnMemberStoreOrderBreassie"/>

</RelativeLayout>
