<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#e7e7e7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_edit_personal_info"
    tools:context="com.zhongchuangtiyu.denarau.Activities.EditPersonalInfoActivity">

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/editPersonalInfoImageRl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="头像"
            android:id="@+id/textView18"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:background="@mipmap/geren_touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/personalInfoImageToEdit"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageView14"/>

        <ImageView
            android:background="@mipmap/shouye_arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView14"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@+id/editPersonalInfoImageRl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/relativeLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="名字"
            android:id="@+id/textView20"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="刘懒"
            android:id="@+id/editPersonalInfoNameToRequest"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@+id/relativeLayout6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/relativeLayout7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="性别"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="男"
            android:id="@+id/editPersonalInfoGenderToRequest"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>

    <ImageView
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/imageView15"
        android:layout_below="@+id/relativeLayout7"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@+id/imageView15"
        android:layout_centerHorizontal="true"
        android:id="@+id/editPersonalInfoBirthRl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="生日"
            android:id="@+id/textView21"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/editPersonalInfoBirthToSet"
            android:layout_alignTop="@+id/textView21"
            android:layout_toStartOf="@+id/imageView16"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:background="@mipmap/shouye_arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView16"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
</RelativeLayout>
